{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": [
      "jest",
      "node"
    ],
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "Interfaces/*": [
        "src/interfaces/*"
      ],
      "Interfaces": [
        "src/interfaces/"
      ],
      "BaseService/*": [
        "node_modules/@enterprise/saas-base-service/dist/*"
      ],
      "BaseService": [
        "node_modules/@enterprise/saas-base-service/dist"
      ],
      "BaseServiceModule/*": [
        "node_modules/@enterprise/saas-base-service/node_modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": [
    "./src/**/*.ts",
    "./services/**/*.ts",
    "./test/**/*.ts",
    "./moleculer.config.ts",
    "./mixin/socket.ts"
  ],
  "lib": ["es2017", "dom", "es2015"]
}