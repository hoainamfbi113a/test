{
  "name": "crm-core-service",
  "repository": {
    "url": "https://git.solazu.net/enterprise/crm/backend-services/service-core"
  },
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "build": "tsc",
    "dev": "yarn update-base-service && ts-node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "cli": "moleculer connect NATS --id=gateway",
    "start": "TS_NODE_PROJECT=tsconfig.docker.json node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --config dist/moleculer.config.js dist/services",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "dc:up": "cp ~/.ssh/id_rsa id_rsa && docker-compose up --build -d; rm id_rsa",
    "dc:down": "docker-compose down",
    "update-base-service": "yarn add git+ssh://git@git.solazu.net:enterprise/crm/libs/base-service.git#dev/create-org"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.17.5",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "moleculer-repl": "^0.5.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@types/uuid": "^3.4.6",
    "base-service": "git+ssh://git@git.solazu.net:enterprise/crm/libs/base-service.git#dev/create-org",
    "dotenv": "^8.2.0",
    "ioredis": "^4.2.0",
    "moleculer": "^0.13.0",
    "moleculer-decorators": "^1.0.21",
    "moleculer-web": "^0.8.0",
    "nats": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "uuid": "^3.3.3"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}